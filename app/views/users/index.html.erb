<h1 align="center"> users </h1>
<% if logged_in? && current_user.admin? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">name</th>
        <th scope="col">worktimes count</th>
        <th scope="col">delete user</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user | %>
         <% if !user.admin %>
            <tr>
              <td><%= link_to user.username, user_path(user) %></td>
              <td><%= pluralize(user.worktimes.count, "") if user.worktimes %></td>
              <td><%= link_to "Delete this user", user_path(user), method: :delete,
               data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></td>
            </tr>
          <% end %> 
      <% end %>
    </tbody>
  </table>
<% end %>
